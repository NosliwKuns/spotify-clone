---
import SidebarLeft from "@/components/SidebarLeft.astro"
import "./src/styles/global.css"

interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<main id="app" class="relative h-screen p-2 gap-2">
			<header class="[grid-area:header] bg-gray-200">HEADER</header>
			<aside class="[grid-area:sidebar-left] flex flex-col overflow-y-auto bg-gray-200">
				<SidebarLeft />
			</aside>
			<main class="[grid-area:main] rounded-lg bg-zinc-900 overflow-y-auto text-white">
				MAIN
			</main>
			<aside class="[grid-area:sidebar-right] bg-gray-200">SIDEBAR RIGHT</aside>
			<footer class="[grid-area:player] h-[100px] bg-black text-white">PLAYER</footer>
		</main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background-color: black;
	}

	#app {
		display: grid;
		grid-template-areas:
			"header header header"
			"sidebar-left main sidebar-right"
			"player player player";
		grid-template-columns: clamp(280px, 25%, 420px) 1fr clamp(280px, 25%, 420px);
		grid-template-rows: auto 1fr auto;
	}
</style>
