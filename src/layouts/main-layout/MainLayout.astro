---
import SidebarLeft from "./components/sidebar-left/SidebarLeft.astro"
import "@/styles/global.css"

interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div id="app" class="h-screen p-2 gap-2 hover:bg-red-300">
			<header class="[grid-area:header] text-zinc-400">HEADER</header>
			<SidebarLeft />
			<main class="[grid-area:main] bg-zinc-900/80 text-zinc-400 rounded-lg overflow-y-auto">
				MAIN
			</main>
			<aside
				class="[grid-area:sidebar-right] bg-zinc-900/80 text-zinc-400 rounded-lg overflow-y-auto"
			>
				SIDEBAR RIGHT
			</aside>
			<footer class="[grid-area:player] text-zinc-400">PLAYER</footer>
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background-color: black;
	}

	#app {
		display: grid;
		grid-template-areas:
			"header header header"
			"sidebar-left main sidebar-right"
			"player player player";
		grid-template-columns: clamp(280px, 20%, 420px) 1fr clamp(280px, 20%, 420px);
		grid-template-rows: auto 1fr auto;
	}
</style>
